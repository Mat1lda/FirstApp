<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".plan.AddingPlan">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tasktoolbar"
        android:background="@color/lavender"
        app:title="Add Plan "
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:id="@+id/addTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/lavender_border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Task"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="#8692f7"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center"
                        android:src="@drawable/baseline_add_task_24"
                        android:layout_marginTop="10dp"

                        android:scaleType="fitXY"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:id="@+id/addAlarm2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/lavender_border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Alarm"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="#8692f7"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/uploadImage"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_add_alarm_24"
                        android:layout_marginTop="10dp"

                        android:scaleType="fitXY"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:id="@+id/addTimeTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/lavender_border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Time Table"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="#8692f7"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center"
                        android:src="@drawable/img_2"
                        android:layout_marginTop="10dp"

                        android:scaleType="fitXY"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:id="@+id/addCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/lavender_border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Calendar"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="#8692f7"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_gravity="center"
                        android:src="@drawable/baseline_edit_calendar_24"
                        android:layout_marginTop="10dp"

                        android:scaleType="fitXY"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>